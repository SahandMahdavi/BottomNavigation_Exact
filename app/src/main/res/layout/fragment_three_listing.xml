                <!--android:hint="@string/gender"-->
                <!--android:inputType="text"-->
                <!--android:shadowColor="#fff"-->
                <!--android:textColor="#fff"-->
                <!--android:textColorHint="#fff"-->
                <!--android:textSize="16sp"/>-->

                <EditText
                    android:id="@+id/edt_personal_profile3"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn_select"
                    android:gravity="center_horizontal|center_vertical"
                    android:hint="@string/fullname"
                    android:inputType="text"
                    android:shadowColor="#fff"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/edt_personal_profile2"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn_select"
                    android:gravity="center_horizontal|center_vertical"
                    android:hint="@string/experties"
                    android:inputType="text"
                    android:shadowColor="#fff"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/edt_personal_profile4"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn_select"
                    android:gravity="center_horizontal|center_vertical"
                    android:hint="@string/organ_level"
                    android:inputType="text"
                    android:shadowColor="#fff"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="16sp"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/contacts"
                android:textColor="@color/textView_visit"
                android:textSize="20sp"
                android:typeface="sans"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edt_contacts1"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn_select"
                    android:gravity="center_horizontal|center_vertical"
                    android:hint="@string/phone"
                    android:inputType="phone"
                    android:shadowColor="#fff"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/edt_contacts2"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn_select"
                    android:gravity="center_horizontal|center_vertical"
                    android:hint="@string/direct"
                    android:inputType="phone"
                    android:shadowColor="#fff"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/edt_contacts3"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn_select"
                    android:gravity="center_horizontal|center_vertical"
                    android:hint="@string/fax"
                    android:inputType="number"
                    android:shadowColor="#fff"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/edt_contacts4"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn_select"
                    android:gravity="center_horizontal|center_vertical"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:shadowColor="#fff"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/edt_contacts5"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn_select"
                    android:gravity="center_horizontal|center_vertical"
                    android:hint="@string/postal_address"
                    android:inputType="text"
                    android:shadowColor="#fff"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textColorLink="@color/textView_visit"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/result"
                android:textColor="@color/textView_visit"
                android:textSize="20sp"
                android:typeface="sans"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edt_result1"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn_select"
                    android:gravity="center_horizontal|center_vertical"
                    android:hint="@string/agreed_services"
                    android:inputType="text"
                    android:shadowColor="#fff"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:text="@string/need_next_visit"
                        android:textColor="@color/textView_visit"
                        android:textSize="18sp"
                        android:typeface="sans"/>

                    <RadioGroup
                        android:id="@+id/check_interact3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="-20dp"
                        android:layout_marginTop="20dp">

                        <RadioButton
                            android:id="@+id/nextYes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:contextClickable="true"
                            android:padding="5sp"
                            android:text="بله"
                            android:textColor="#fff"
                            android:textSize="14sp"/>

                        <RadioButton
                            android:id="@+id/nextNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:contextClickable="true"
                            android:padding="5sp"
                            android:text="خیر"
                            android:textColor="#fff"
                            android:textSize="14sp"/>

                    </RadioGroup>

                </LinearLayout>

                <EditText
                    android:id="@+id/edt_result3"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn_select"
                    android:gravity="center_horizontal|center_vertical"
                    android:hint="@string/relational_name"
                    android:inputType="text"
                    android:shadowColor="#fff"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/edt_result4"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn_select"
                    android:gravity="center_horizontal|center_vertical"
                    android:hint="@string/relational_phone"
                    android:inputType="phone"
                    android:shadowColor="#fff"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/edt_result5"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn_select"
                    android:gravity="center_horizontal|center_vertical"
                    android:hint="@string/description"
                    android:inputType="text"
                    android:shadowColor="#fff"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_capture_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/picture"
                android:textColor="@color/textView_visit"
                android:textSize="20sp"
                android:typeface="sans"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/ImageViewHolder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="26dp"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/profile" />

               <EditText
                android:id="@+id/editText_imagename"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_select"
                android:gravity="center_horizontal|center_vertical"
                android:hint="لطفا نام عکس را وارد کنید"
                android:inputType="text"
                android:shadowColor="#fff"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="16sp"/>

                <Button
                    android:id="@+id/btn_capture_picture"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginTop="15sp"
                    android:background="@drawable/button_round_corner"
                    android:text="@string/save_image"
                    android:textColor="#A5A8B1"
                    android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/register_btn_register"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="15sp"
                android:background="@drawable/button_round_corner"
                android:text="@string/save_changes"
                android:textColor="#A5A8B1"
                android:textSize="18sp"/>
        </LinearLayout>

    </LinearLayout>


</ScrollView>
