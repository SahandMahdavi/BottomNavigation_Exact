<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/scrolltwo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/profile"
            android:fillViewport="true"
            android:scrollbars="none"
            tools:context="com.example.asus.amindatacolector.Fragments.ThreeFragment">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layoutDirection="rtl"
        android:orientation="vertical">

            <TextView
                android:id="@+id/text_interact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/interact"
                android:textColor="@color/textView_visit"
                android:textSize="20sp"
                android:typeface="sans"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/visitor_amin_budget"
                    android:textColor="@color/textView_visit"
                    android:textSize="15sp"
                    android:typeface="sans"/>

                <!--<EditText-->
                <!--android:id="@+id/check_interact1"-->
